record(ai, "$(IOC)BraggOffset")
{
	field(DESC, "Bragg Angle offset")
	field(INP, "0.3149")
	field(EGUF, "10")
	field(EGU, "degrees")
	field(HIHI, "1.0")
	field(HIGH, "0.8")
	field(LOW, "-0.8")
	field(LOLO, "-1.0")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}
record(ai, "$(IOC)DCMDspacing")
{
	field(DESC, "Effective d-spacing for DCM crystal")
	field(INP, "3.1355")
	field(EGUF, "10")
	field(EGU, "Angstrom")
	field(HIHI, "3.4")
	field(HIGH, "3.3")
	field(LOW, "1.6")
	field(LOLO, "1.5")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}
record(calc, "$(IOC)Energy")
{
	field(DESC, "Photon Energy, BL 1")
	field(SCAN, 9)
	field(CALC, "B / ( 2 * D * SIN( ( C + A ) * 3.141592 / 180 ) )")
	field(INPA, "$(IOC)BraggOffset.VAL CA NMS")
	field(INPB, "12398.4")
	field(INPC, "XF:05IDA-OP:1{Mono:HDCM-Ax:P}Mtr.RBV CA NMS")
	field(INPD, "$(IOC)DCMDspacing.VAL CA NMS")
	field(EGU, "eV")
	field(HIHI, "26000")
	field(HIGH, "25000")
	field(LOW, "4500")
	field(LOLO, "4400")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}
